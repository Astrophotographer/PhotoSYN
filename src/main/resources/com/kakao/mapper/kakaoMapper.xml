<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kakao.mapper.KakaoRepo">

    <insert id="kakaoInsert">
        insert into kakao(email, name, image)
        values (#{email}, #{name}, #{image})
    </insert>

    <!--
        <select id="findKakao" resultType="kdto">
            select *
            from kakao
            where name = #{name}
              and email = #{email}
        </select>
    -->
</mapper>